<%- include('header') -%>

  <section class="section contact" data-section="section6">
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <div class="section-heading">
            <h2>DEVIS PARTICULIER</h2>
          </div>
        </div>
        <div class="col-md-12">
          <form id="contact" action="envoi-devis-particulier" method="post" class="">
            <div class="row">
                <div class="col-md-6">
                  <fieldset>
                    <input name="nom" type="text" class="form-control" id="name" placeholder="Votre Nom *" required="" autocomplete="off">
                  </fieldset>
                </div>
                <div class="col-md-6"> 
                  <fieldset>
                    <input name="prenom" type="text" class="form-control" placeholder="Votre Prénom *" required="" autocomplete="off">
                  </fieldset>
                </div>
                <div class="col-md-6">
                    <fieldset>
                      <input name="adresse" type="text" class="form-control"  placeholder="Votre adresse *" required="">
                    </fieldset>
                  </div>
                  <div class="col-md-6">
                    <fieldset>
                      <input name="codepostal" type="text" class="form-control" autocomplete="off" placeholder="Code Postal *" required="">
                    </fieldset>
                  </div>
                  <div class="col-md-6">
                    <fieldset>
                      <input name="ville" type="text" class="form-control" autocomplete="off" placeholder="Ville *" required="">
                    </fieldset>
                  </div>
                  <div class="col-md-6">
                    <fieldset>
                      <input name="telephone" type="number" class="form-control" autocomplete="off" placeholder="Téléphone *" required="">
                    </fieldset>
                  </div>
                  <div class="col-md-12">
                    <fieldset>
                      <select name="traitement" id="" class="form-control">
                          <option  selected>- Type de traitement -</option>
                          <option value="deratisation">Dératisation</option>
                          <option value="desinsectisation">Désinsectisation</option>
                          <option value="desinfection">Désinfection</option>
                          <option value="nettoyage">Nettoyage</option>
                      </select>
                    </fieldset>
                  </div>
              <div class="col-md-12">
                <fieldset>
                  <textarea name="message" rows="6" class="form-control" id="message" placeholder="Votre message..." required=""></textarea>
                </fieldset>
              </div>
              <div class="col-md-6">
                <fieldset>
                  <button type="reset" id="form-submit" class="button">Annuler</button>
                </fieldset> 
              </div> <br>
              <div class="col-md-6">
                <fieldset>
                  <button type="submit" id="form-submit" class="button">Envoyer un message</button>
                </fieldset>
              </div>
            </div>
          </form>
      
        </div>
       
      </div>
    </div>
  </section>

  <!--    footer-->
  <%- include('footer') -%>